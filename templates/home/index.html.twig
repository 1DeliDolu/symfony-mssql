{% extends 'base.html.twig' %}

{% block title %}Pubs Admin - Overview{% endblock %}

{% block body %}
    <div class="grid">
        <section class="panel">
            <div class="panel-head">
                <div>
                    <h2>Welcome to Pubs Admin</h2>
                    <p class="meta">Manage MSSQL sample data with a clean, modern interface.</p>
                </div>
            </div>
            <p>
                Use the quick actions below to jump into the most common sections. Each tile mirrors the same
                glassmorphism style as the rest of the app so the homepage feels cohesive.
            </p>
            <div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(200px,1fr));gap:1rem;margin-top:1.5rem;">
                <a class="panel" style="text-decoration:none;" href="{{ path('author_index') }}">
                    <h3>Authors</h3>
                    <p class="meta">Create and edit author records.</p>
                </a>
                <a class="panel" style="text-decoration:none;" href="/titles">
                    <h3>Titles</h3>
                    <p class="meta">Browse catalog metadata.</p>
                </a>
                <a class="panel" style="text-decoration:none;" href="/sales">
                    <h3>Sales</h3>
                    <p class="meta">Review store order history.</p>
                </a>
                <a class="panel" style="text-decoration:none;" href="{{ path('discount_index') }}">
                    <h3>Discounts</h3>
                    <p class="meta">Control promotional pricing.</p>
                </a>
                <a class="panel" style="text-decoration:none;" href="{{ path('publisher_index') }}">
                    <h3>Publishers</h3>
                    <p class="meta">Manage publishing houses.</p>
                </a>
                <a class="panel" style="text-decoration:none;" href="/employees">
                    <h3>Employees</h3>
                    <p class="meta">Keep staff data in sync.</p>
                </a>
            </div>
        </section>
    </div>
{% endblock %}

