{% extends 'base.html.twig' %}

{% block title %}Publisher Info {{ pub_info.pubId }} - Pubs Admin{% endblock %}

{% block body %}
    <div class="grid">
        <section class="panel">
            <div class="panel-head">
                <div>
                    <h2>{{ pub_info.publisher ? pub_info.publisher.name : pub_info.pubId }}</h2>
                    <p class="meta">Publisher info entry</p>
                </div>
                <div class="stack">
                    <a class="btn" href="/pub-info/{{ pub_info.pubId }}/edit">Edit</a>
                    <a class="btn btn-secondary" href="/pub-info">Back</a>
                </div>
            </div>

            <table>
                <tbody>
                <tr>
                    <th>Logo attached</th>
                    <td>{{ pub_info.logo ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>PR Info</th>
                    <td>{{ pub_info.prInfo ?? 'None' }}</td>
                </tr>
                </tbody>
            </table>

            {{ include('pub_info/_delete_form.html.twig', {'pub_info': pub_info}) }}
        </section>
    </div>
{% endblock %}
