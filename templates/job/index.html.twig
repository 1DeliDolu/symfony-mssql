{% extends 'base.html.twig' %}

{% block title %}Jobs - Pubs Admin{% endblock %}

{% block body %}
    <div class="grid">
        <section class="panel">
            <div class="panel-head">
                <div>
                    <h2>Jobs</h2>
                    <p class="meta">Open and existing job descriptions.</p>
                </div>
                <a class="btn" href="/jobs/new">+ New job</a>
            </div>

            <div class="table-wrapper">
                <table>
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Description</th>
                        <th>Range</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for job in jobs %}
                        <tr>
                            <td>{{ job.id }}</td>
                            <td>{{ job.description }}</td>
                            <td>{{ job.minLvl }} - {{ job.maxLvl }}</td>
                            <td class="table-actions">
                                <a href="/jobs/{{ job.id }}">Details</a>
                                <a href="/jobs/{{ job.id }}/edit">Edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="empty-state">No jobs defined.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>
    </div>
{% endblock %}
