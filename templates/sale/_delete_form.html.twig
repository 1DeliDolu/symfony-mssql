<form method="post" action="/sales/{{ sale.store.id }}/{{ sale.ordNum }}/{{ sale.title.id }}/delete" onsubmit="return confirm('Delete this sale record?');" class="stack">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sale.store.id ~ '-' ~ sale.ordNum ~ '-' ~ sale.title.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>
