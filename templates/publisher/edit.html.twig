{% extends 'base.html.twig' %}

{% block title %}Edit Publisher - Pubs Admin{% endblock %}

{% block body %}
    <div class="grid">
        <section class="panel">
            <div class="panel-head">
                <div>
                    <h2>Edit {{ publisher.name ?? publisher.id }}</h2>
                    <p class="meta">Publisher ID: {{ publisher.id }}</p>
                </div>
                <a class="btn btn-secondary" href="{{ path('publisher_index') }}">‚Üê Back</a>
            </div>

            <div class="flex justify-between items-center mt-4">
                    <div>
                        {{ include('publisher/_form.html.twig', {'button_label': 'Update publisher'}) }}
                    </div>

                    <div class="text-right">
                        {{ include('publisher/_delete_form.html.twig', {'publisher': publisher}) }}
                    </div>
                </div>

        </section>
    </div>
{% endblock %}

